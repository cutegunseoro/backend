<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.travlog.api.mapper.PushSubscriptionMapper">
    <insert id="insertPushSubscription" parameterType="PushSubscriptionInsertModel">
        INSERT INTO push_subscription(member_id, token)
        VALUES (#{memberId}, #{token})
    </insert>

    <delete id="deletePushSubscription">
        DELETE
        FROM push_subscription
        WHERE push_subscription_id = #{pushSubscriptionId}
    </delete>

    <select id="selectPushSubscriptionByPushSubscriptionId" resultType="PushSubscriptionModel">
        SELECT *
        FROM push_subscription
        WHERE push_subscription_id = #{pushSubscriptionId}
    </select>

    <select id="selectPushSubscriptionsByMemberId" resultType="PushSubscriptionModel">
        SELECT *
        FROM push_subscription
        WHERE member_id = #{memberId}
        ORDER BY created_at ASC
    </select>
</mapper>